@page
@model StudentManagement.Pages.SignInModel
@{
    if (Model.ErrorMessage != String.Empty) {
        <h1 class="text-danger">@Model.ErrorMessage</h1>
    }

    <form method="post">
        <div class="form-group">
            <label>Student Number</label>
            <input type="text" class="form-control" name="StudentNumber" value=@Model.StudentNumber />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="Password" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary mt-2 w-100">Sign In</button>
        </div>
    </form>
}
