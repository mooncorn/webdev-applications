@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1 class="text-center">Student Management</h1>

<div class="m-auto cards">

    @for (int i = 1; i <= Model.Students.Count; i++) {
        var student = Model.Students[i-1];

        <div class="card card-custom m-3" style="width: 18rem">
            <img class="card-img-top card-img" src="@student.Picture" alt="Card imgae cap" />
            <div class="card-body">
                <p class="card-text"><i class="bi bi-person-video2 me-1"></i>@student.StudentNumber</p>
                <p class="card-text"><i class="bi bi-layout-text-sidebar me-1"></i>@student.FullName</p>
                <p class="card-text"><i class="bi bi-envelope me-1"></i>@student.Email</p>
                <a class="btn btn-warning w-100" asp-page="/EditStudent" asp-route-StudentNumber=@student.StudentNumber><i class="bi bi-pencil-square"></i></a>
                <a class="btn btn-danger w-100 mt-1" asp-page="/DeleteStudent" asp-route-StudentNumber=@student.StudentNumber><i class="bi bi-trash3"></i></a>
            </div>
        </div>

       if (i % 3 == 0) {
           <br/>
       }
}

</div>

