@page
@model Pilarski_David_Midterm.Pages.DeleteModel
@{
}

<form method="post">
    <h1>Are you sure you want to delete this product?</h1>
    <ul>
        <li>Product Id: @Model.Product.ProductId</li>
        <li>Product Description: @Model.Product.ProductDescription</li>
        <li>Quantity: @Model.Product.Quantity</li>
        <li>Buy Price: @Model.Product.BuyPrice</li>
        <li>Sell Price: @Model.Product.SellPrice</li>
    </ul>

    <div class="d-flex">
        <button type="submit" class="btn btn-danger w-25 mt-4">Yes</button>
        <a asp-page="/Index" class="btn btn-success w-25 mt-4 ms-4">No</a>
    </div>
</form>