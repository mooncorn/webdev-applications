@page
@model Week_8_Midterm_Review.Pages.EditModel
@{
}

<form method="post">  
    <div class="row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.Product.Id"></label>
            <input asp-for="@Model.Product.Id" class="form-control" readonly/>
            <span asp-validation-for="@Model.Product.Id" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Product.ProductName"></label>
            <input asp-for="@Model.Product.ProductName" class="form-control"/>
            <span asp-validation-for="@Model.Product.ProductName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Product.ProductPrice"></label>
            <input asp-for="@Model.Product.ProductPrice" class="form-control"/>
            <span asp-validation-for="@Model.Product.ProductPrice" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary w-100 mt-4">Edit</button>
</form>